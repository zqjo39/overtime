extends ../layout

block content
    div.content
        h1 HR
        p Welcome to Human Resources!
        table
            thead
                th First
                th Last
                th Date of Birth
                th Title
                th Address
                th Number
                th Year Hired
                //th Actions
            tbody
            each user in users
                tr
                    td= user.first_name
                    td= user.last_name
                    td= user.dob
                    td= user.role_id
                    // todo let's put a peen (pin) in this; relations are being weird and name is just not appearing
                    td
                        div #{user.address_one}
                        div #{user.address_two}
                        div= `${user.city}, ${user.state} ${user.zip}`
                    td= user.phone_number
                    td= user.year_hired
                    td
                        div.actions
                            a(href = `/profile/${user.id}`) View Profile
                        //    a(href = `/update/${user.id}`) Edit
                        //    a(href = `/delete/${user.id}`) Delete